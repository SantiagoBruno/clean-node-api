{
  "name": "clean-node-api",
  "version": "1.4.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "up": "npm run build && sudo docker compose up",
    "down": "sudo docker compose down",
    "test": "jest --passWithNoTests  --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand --detectOpenHandles",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests --coverage",
    "test:ci": "npm test -- --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-strict-null-checks": "^0.0.21",
    "git-commit-msg-linter": "^4.1.3",
    "husky": "^4.3.8",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "mockdate": "^3.0.5",
    "node-mocks-http": "^1.12.1",
    "rimraf": "^4.1.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^4.8.0",
    "nodemon": "^2.0.20",
    "validator": "^13.7.0",
    "module-alias": "^2.2.2"
  },
  "engines": {
    "node": "16.x"
  }, 
